rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    match /operations/{opId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.role in ['COMMANDER', 'DUTY_OFFICER'];
    }
    
    match /blackbox/{allPaths=**} {
      allow read: if request.auth.token.role == 'MINISTER' || request.auth.token.role == 'AUDITOR';
      allow write: if false; // System only (via Admin SDK)
    }
  }
}
